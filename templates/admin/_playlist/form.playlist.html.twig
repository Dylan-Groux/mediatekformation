{% extends 'admin.html.twig' %}

{% block title %}Crée la formation{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-4">Crée la formation</h2>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>

        {% if form.formations is defined %}
            <div class="mb-3">
                {{ form_label(form.formations) }}
                {{ form_widget(form.formations, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.formations) }}
            </div>
        {% endif %}

        <div class="mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>
        <div class="d-flex ">
            <div class="">
                {{ form_row(form.save) }} <!-- Affiche le bouton "Enregistrer" -->
            </div>
            <div class="">
                {{ form_row(form.cancel) }} <!-- Affiche le bouton "Annuler" -->
            </div>
        </div>

    {{ form_end(form) }}
</div>
{% endblock %}
